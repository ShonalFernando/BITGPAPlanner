<Page x:Class="Planner.Client.View.Pages.SubjectsViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Planner.Client.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="SubjectsViewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Height="40" Background="{DynamicResource MahApps.Brushes.Accent}"  Grid.Row="1">
            <Button Margin="5" Content="Load..." Width="150" HorizontalAlignment="Right" Style="{DynamicResource MahApps.Styles.Button.Flat}" Command="{Binding OpenDialogCommand}"/>
            <Button Margin="5" Content="Create..." Width="150" HorizontalAlignment="Right" Style="{DynamicResource MahApps.Styles.Button.Flat}" Command="{Binding CreateCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="0" 
                  ItemsSource="{Binding Subjects}" 
                  AutoGenerateColumns="True"
                  SelectedItem="{Binding SelectedSubject, Mode=TwoWay}" 
                  Margin="5" />
    </Grid>
</Page>
