<Window x:Class="Planner.Client.View.Dialogs.PopupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner.Client.View.Dialogs"
        mc:Ignorable="d"
        Title="PopupDialog" Height="200" Width="500" WindowStyle="None" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Are you Sure?..." Margin="20,30,10,10" Foreground="{DynamicResource MahApps.Brushes.Accent}" FontSize="18" FontFamily="Segoe UI Semibold" />
        <Separator Margin="2"/>
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}" />
        </StackPanel>
    </StackPanel>
</Window>
